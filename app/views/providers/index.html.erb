<p id="notice"><%= notice %></p>

<h1>Listing Providers</h1>

<table border>
  <thead>
    <tr>
      <th>Name</th>

      <th>Address</th>
    
      <th>Phone</th>
      <th>Email</th>
      <th>Licensecap</th>
      <th>Sqonecap</th>
      <th>Licenseexpdate</th>
      <th>Certlevel</th>
      <th>Sqonerepl</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.fName %> <%= provider.middle %> <%= provider.lName %></td>
        <td><%= provider.addr1 %> <%= provider.addr2 %>, 
        <%= provider.city %>, <%= provider.state %> <%= provider.zip %></td>
        <td><%= provider.phone %></td>
        <td><%= provider.email %></td>
        <td><%= provider.licenseCap %></td>
        <td><%= provider.sqOneCap %></td>
        <td><%= provider.licenseExpDate %></td>
        <td><%= provider.certLevel %></td>
        <td><%= provider.sqOneRepl %></td>
        <td><%= link_to 'Show', provider %></td>
        <td></td><%= link_to 'Edit', edit_provider_path(provider) %></td>
        <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add Attendance Record', provider_children_path(provider) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

