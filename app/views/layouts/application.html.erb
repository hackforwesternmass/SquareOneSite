<!DOCTYPE html>
<html>
<head>
  <title>Square One Attendance</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="header">
    
<h1> <%= image_tag "squareonelogo.png" %>
Family Child Care Provider Portal
 <% if session[:admin] == "true" %>
    (Admin View)
 <% end %>
</h1>
</div>
<p></p>

  <nav>

 
      <ul class="nav">
  <% if session[:admin] == "true" %>

           <li><%= link_to 'Home', root_path %></li>
        <li> <%= link_to 'Attendance', attendance_admin_index_path %> </li>
        <li> <%= link_to 'Search', search_admin_index_path %> </li>
        <li> <%= link_to 'Providers', providers_path %> </li>
        <li> <%= link_to 'Children', children_path %> </li>
                <li> <%= link_to 'Time Off', time_offs_path %> </li>
        <li><%= link_to 'Log Off', root_path %></li> 
       

      <% else   %>
  
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Attendance', dailyAttendance_provider_children_path(1) %></li>
         <li> <%= link_to 'Children', provider_children_path(1) %> </li>
         <li><%= link_to 'Time Off', provider_time_offs_path(1) %></li>
   <li><%= link_to 'Sub Care', root_path %></li> 
    <li><%= link_to 'My Info', edit_provider_path(1) %></li>
   <li><%= link_to 'Log Off', root_path %></li> 
<% end %>
        </ul>
        </nav>
        <br>
        <p><center><b>Choose between Provider or Admin menus:</b> <%= link_to 'Provider Menu', root_path(:admin => "false") %> or <%= link_to 'Admin Menu', root_path(:admin => "true") %>
</center></p>
        <p></p>
  <div class="content">
          
         
<%= yield %>
</div></div>
</body>
</html>
