<p>
<hr/>

     <h3> Search by Care Provider and Date:</h3>
<%= form_tag(search_results_providers_path, :method => "get", id: "search") do %>
Choose a care provider:    
     <%= select_tag :provider_id, options_for_select(Provider.order('lName').all.collect{|a| [a.lName + ", " + a.fName , a.id]}), { :prompt => 'All' }  %> 
 <p> See Attendance Records From: 
     <%= date_field_tag :fromDate, value: Date.today.to_s(:db)  %>
        To: 
     <%= date_field_tag :toDate, value: Date.today.strftime("%m/%d/%Y")  %></p>

<%= submit_tag "Search Providers" %>
<% end %>
</p>
<hr/>
<p>
     <h3> Search by Child and Date</h3>
<%= form_tag(search_results_children_path, :method => "get", id: "search") do %>
<p> Choose a child:    
     <%= select_tag :child_id, options_for_select(Child.order('lName').all.collect{|a| [a.lName + ", " + a.fName , a.id]}), { :prompt => 'All' }  %> 
    </p>
    <p> Attendance Dates From: 
     <%= date_field_tag :fromDate, value: Date.today.to_s(:db)  %>
        To: 
     <%= date_field_tag :toDate, value: Date.today.strftime("%m/%d/%Y")  %></p>
<p><%= submit_tag "Search Children" %> </p>
<% end %>
</p>
